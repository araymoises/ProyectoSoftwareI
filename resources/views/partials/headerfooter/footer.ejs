<script>
$(document).ready(function(){
  $('#login').on('click', function(e){
    e.preventDefault();
    $.ajax({
            url: "http://localhost:3000/api",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({
                title    : 'Hosacdasdcasdasla',
            }),
            success: function(data){
              alert(data.title);
            },
            error: function(xhr, status, err){
              alert("Error");
                console.log(err);
            }
        });
  });
});
</script>
